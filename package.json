{
  "name": "robohydra-mock-server",
  "version": "0.0.1-alpha.1",
  "description": "Web API mocking server for e2e testing based on RoboHydra.",
  "scripts": {
    "lint": "tslint \"src/**/*.ts\"",
    "test": "mocha --compilers ts:ts-node/register \"src/**/*.spec.ts\"",
    "cover": "rimraf coverage && nyc --require ts-node/register npm run test",
    "build": "tsc -p .",
    "build:clean": "rimraf \"client/*\"",
    "prepublish": "npm run build && npm run test",
    "prebuild": "npm run build:clean",
    "pretest": "npm run lint"
  },
  "main": "./client/index.js",
  "typings": "./client/index",
  "files": [
    "client",
    "plugins"
  ],
  "keywords": [
    "mock",
    "server",
    "robohydra"
  ],
  "dependencies": {
    "request": "^2.75.0",
    "rxjs": "^5.0.0-rc"
  },
  "author": "Evgeniy V. Generalov <e.generalov@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "@types/chai": "^3.4.34",
    "@types/es6-promise": "0.0.32",
    "@types/mocha": "^2.2.32",
    "@types/node": "6.0.45",
    "@types/request": "0.0.31",
    "chai": "^3.5.0",
    "istanbul": "^0.4.5",
    "mocha": "^3.1.2",
    "nyc": "^8.3.2",
    "rimraf": "^2.5.4",
    "ts-node": "^1.4.3",
    "tslint": "3.15.1",
    "typescript": "^2.1.0-dev.20161026"
  },
  "peerDependencies": {
    "robohydra": "^0.6.4"
  },
  "nyc": {
    "include": [
      "src/**/*.ts"
    ],
    "exclude": [
      "src/**/*.spec.ts",
      "node_modules/",
      "client/"
    ],
    "extension": [
      ".ts"
    ],
    "require": [
      "ts-node/register"
    ],
    "reporter": [
      "lcov",
      "text-summary"
    ],
    "sourceMap": true,
    "instrument": true,
    "cache": true,
    "all": true
  }
}
