{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "sourceMap": true,
    "outDir": "./",
    "rootDir": "./src",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "declaration": true,
    "pretty": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "forceConsistentCasingInFileNames": true,
    "typeRoots": [
      "./node_modules/@types"
    ]
  },
  "include": [
    "src/client/*"
  ],
  "exclude": [
    "src/client/specs/*"
  ]

}
